<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoApp"
    android:padding="@dimen/padding_normal">

    <!-- Encabezado con logo + título -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logoApp"
            android:layout_width="@dimen/icono_grande"
            android:layout_height="@dimen/icono_grande"
            android:src="@mipmap/ic_launcher_round"
            android:contentDescription="@string/app_name"
            android:layout_marginEnd="@dimen/margen_normal" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_title"
            android:textSize="@dimen/texto_titulo"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Caja de texto para ingresar quehacer -->
    <EditText
        android:id="@+id/entradaQuehacer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_entrada"
        android:layout_marginTop="@dimen/margen_normal"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAgregar" />

    <!-- Botón para agregar -->
    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_agregar"
        android:backgroundTint="@color/botonAgregar"
        android:textColor="@color/botonAgregarTexto"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scroll principal con listas -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margen_normal"
        app:layout_constraintTop_toBottomOf="@id/entradaQuehacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/contenedorPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sección Pendientes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margen_normal">

                <ImageView
                    android:layout_width="@dimen/icono_normal"
                    android:layout_height="@dimen/icono_normal"
                    android:src="@drawable/ic_clipboard_add"
                    android:contentDescription="@string/titulo_pendientes"
                    android:layout_marginEnd="@dimen/margen_normal" />

                <TextView
                    android:id="@+id/tituloPendientes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_pendientes"
                    android:textSize="@dimen/texto_seccion"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contenedorPendientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Sección Terminadas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margen_grande">

                <ImageView
                    android:layout_width="@dimen/icono_normal"
                    android:layout_height="@dimen/icono_normal"
                    android:src="@drawable/ic_check"
                    android:contentDescription="@string/titulo_terminadas"
                    android:layout_marginEnd="@dimen/margen_normal" />

                <TextView
                    android:id="@+id/tituloTerminadas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_terminadas"
                    android:textSize="@dimen/texto_seccion"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contenedorTerminadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Sección Prioridad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margen_grande">

                <ImageView
                    android:layout_width="@dimen/icono_normal"
                    android:layout_height="@dimen/icono_normal"
                    android:src="@drawable/ic_important"
                    android:contentDescription="@string/titulo_importantes"
                    android:layout_marginEnd="@dimen/margen_normal" />

                <TextView
                    android:id="@+id/tituloPrioridad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_importantes"
                    android:textSize="@dimen/texto_seccion"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contenedorPrioridad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>